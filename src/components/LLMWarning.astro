    border: 1px solid #f59e0b;
    border-radius: 0.4rem;
    box-shadow: 8px 8px 0 0 #e1a52d;
  }

  .warning-icon {
    flex-shrink: 0;
    color: #f59e0b;
    margin-top: 0.125rem;
  }

  .warning-content h3 {
    margin: 0 0 0.5rem 0;
    color: #92400e;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .warning-content p {
    margin: 0 0 0.5rem 0;
    color: #92400e;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .warning-content p:last-child {
    margin-bottom: 0;
  }

  .warning-content strong {
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .llm-warning {
      flex-direction: column;
      gap: 0.75rem;
    }

    .warning-icon {
      align-self: flex-start;
    }
  }
</style>
